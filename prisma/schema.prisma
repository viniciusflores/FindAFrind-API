// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String   @unique
  cep           String
  address       String
  password_hash String
  created_at    DateTime @default(now())
  Pet           Pet[]

  @@map("org")
}

enum PetAgeDescription {
  PUPPY
  JUNIOR
  ADULT
  SENIOR
}

enum PetSizeDescription {
  SMALL
  MEDIUM
  LARGE
}

enum PetLevelEnergyDescription {
  LOW
  MEDIUM
  HIGH
}

enum PetLevelIndependence {
  LOW
  MEDIUM
  HIGH
}

enum PetRace {
  DOG
  CAT
  OTHER
}

enum PetGender {
  MALE
  FEMALE
}

model Pet {
  id String @id @default(uuid())

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  name         String
  about        String
  age          PetAgeDescription
  size         PetSizeDescription
  energy       PetLevelEnergyDescription
  independence PetLevelIndependence
  race         PetRace
  gender       PetGender

  @@map("pet")
}
