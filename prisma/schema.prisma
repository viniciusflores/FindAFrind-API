// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String   @unique
  cep           String
  adress        String
  password_hash String
  created_at    DateTime @default(now())
  Pet           Pet[]

  @@map("org")
}

enum PetAgeDescription {
  FILHOTE
  JOVEM
  ADULTO
  IDOSO
}

enum PetSizeDescription {
  PEQUENO
  MEDIO
  GRANDE
}

enum PetLevelEnergy {
  LOW
  MEDIUM
  HIGH
}

enum PetGender {
  MALE
  FEMALE
}

enum PetLevelIndependence {
  LOW
  MEDIUM
  HIGH
}

model Pet {
  id String @id @default(uuid())

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  name           String
  about          String
  age            Int
  ageDescription PetAgeDescription
  size           PetSizeDescription
  energy         PetLevelEnergy
  independence   PetLevelIndependence

  @@map("pet")
}
